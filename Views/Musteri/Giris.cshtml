@model MVCandASP.Models.Entity.Musteriler
@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Musteri Girisi</title>
</head>
<body>
    <div style="text-align:center"><b>MÜŞTERİ GİRİŞ SAYFASI</b></div>
    @using (Html.BeginForm("Giris", "Musteri", FormMethod.Post))
    {
        <form id="loginForm" style="margin:0 auto">
            <br />
            <div>
                <table style="margin:0 auto">
                    <tr>
                        <td style="text-align:left">
                            <label for="username">KULLANICI ADI:</label>
                        </td>
                        <td>
                            @Html.TextAreaFor(m => m.username, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align:left">
                            <label for="pass">ŞİFRE:</label>
                        </td>
                        <td>
                            @Html.TextAreaFor(m => m.password, new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"><button type="submit" style="text-align:center" id="btnGiris">Giriş Yap</button></td>
                        <td colspan="2"><a class="btn btn-default" style="background-color:antiquewhite" href="~/Pages/KayitOl.aspx">Kayıt Ol</a></td>
                    </tr>
                </table>
            </div>
        </form>
    }
</body>
</html>


